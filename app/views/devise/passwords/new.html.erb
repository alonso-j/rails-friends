<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="d-flex flex-column align-items-center">
    <div class="card border border-2 text-center d-grip gap-3 py-3" style="width: 40rem">
      <h2>Forgot your password?</h2>
      <div class="field mx-3 mb-2">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-group", placeholder: "email" %>
      </div>

      <div class="actions mb-2">
        <%= f.submit "Send me reset password instructions", class: "btn btn-outline-secondary" %>
      </div>

    </div>
  </div>
<% end %>

<%= link_to "BACK", new_user_session_path, class: "btn btn-dark back-button" %>

